{
  "variables": {
    "aws_access_key_id": "{{ env `AWS_ACCESS_KEY_ID` }}",
    "aws_secret_access_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",
    "aws_region": "{{ env `AWS_REGION` }}",
    "aws_owner": "{{ env `AWS_OWNER` }}",
    "environment": "{{ env `PACKER_ENVIRONMENT` }}",
    "vcs_name": "{{ env `VCS_NAME` }}",
    "consul_version": "{{ env `CONSUL_VERSION` }}",
    "consul_ent_url": "{{ env `CONSUL_ENT_URL` }}",
    "nomad_version": "{{ env `NOMAD_VERSION` }}",
    "nomad_ent_url": "{{ env `NOMAD_ENT_URL` }}"
  },
  "builders": [
    {
      "name": "amazon-ebs-rhel-7.3-systemd",
      "type": "amazon-ebs",
      "access_key": "{{ user `aws_access_key_id` }}",
      "secret_key": "{{ user `aws_secret_access_key` }}",
      "region": "{{user `aws_region`}}",
      "ami_regions": ["eu-west-2","us-east-1","us-west-1"],
      "spot_price_auto_product": "Linux/UNIX (Amazon VPC)",
      "ssh_pty": true,
      "instance_type": "t2.medium",
      "associate_public_ip_address": true,
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "*RHEL-7.3_HVM_GA-*",
          "root-device-type": "ebs"
        },
        "most_recent": true
      },
      "ssh_username": "ec2-user",
      "ssh_timeout": "5m",
      "ami_virtualization_type": "hvm",
      "ami_description": "Nomad Server",
      "ami_name": "nomad-server-{{ user `nomad_version` }}-RHEL_7.3-{{isotime \"2006-01-02-1504\"}}",
      "tags": {
        "Name": "{{user `environment`}} Nomad Server {{ user `nomad_version` }}",
        "System": "Nomad",
        "Product": "Nomad",
        "Environment": "{{user `environment`}}",
        "Built-By": "{{user `vcs_name`}}",
        "Product-Version": "{{user `nomad_version`}}",
        "OS": "RHEL",
        "OS-Version": "7.3"
      }
    },
    {
      "name": "amazon-ebs-ubuntu-16.04-systemd",
      "type": "amazon-ebs",
      "access_key": "{{ user `aws_access_key_id` }}",
      "secret_key": "{{ user `aws_secret_access_key` }}",
      "region": "{{user `aws_region`}}",
      "ami_regions": ["eu-west-2","us-east-1","us-west-1"],
      "spot_price_auto_product": "Linux/UNIX (Amazon VPC)",
      "ssh_pty": true,
      "instance_type": "t2.medium",
      "associate_public_ip_address": true,
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "*ubuntu-xenial-16.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "most_recent": true
      },
      "ssh_username": "ubuntu",
      "ssh_timeout": "10m",
      "ami_virtualization_type": "hvm",
      "ami_description": "Nomad Server",
      "ami_name": "nomad-server-{{ user `nomad_version` }}-Ubuntu_16.04-{{isotime \"2006-01-02-1504\"}}",
      "tags": {
        "Name": "{{user `environment`}} Nomad Server {{ user `nomad_version` }}",
        "System": "Nomad",
        "Product": "Nomad",
        "Environment": "{{user `environment`}}",
        "Built-By": "{{user `vcs_name`}}",
        "Product-Version": "{{user `nomad_version`}}",
        "OS": "Ubuntu",
        "OS-Version": "16.04"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../shared",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "../consul",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "../nomad",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "inline": [
        "bash /tmp/shared/scripts/base.sh"
      ]
    },
    {
      "type": "shell",
      "only": ["amazon-ebs-rhel-7.3-systemd", "amazon-ebs-ubuntu-16.04-systemd"],
      "inline": [
        "bash /tmp/shared/scripts/base-aws.sh"
      ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "USER=consul",
        "GROUP=consul",
        "COMMENT=Consul",
        "HOME=/srv/consul"
      ],
      "inline": [
        "bash /tmp/shared/scripts/setup-user.sh"
      ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "USER=consul",
        "GROUP=consul",
        "VERSION={{user `consul_version`}}",
        "URL={{user `consul_ent_url`}}"
      ],
      "inline": [
        "bash /tmp/consul/scripts/install-consul.sh"
      ]
    },
    {
      "type": "shell",
      "only": ["amazon-ebs-rhel-7.3-systemd", "amazon-ebs-ubuntu-16.04-systemd"],
      "inline": [
        "bash /tmp/consul/scripts/install-consul-systemd.sh"
      ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "USER=nomad",
        "GROUP=nomad",
        "COMMENT=Nomad",
        "HOME=/srv/nomad"
      ],
      "inline": [
        "bash /tmp/shared/scripts/setup-user.sh"
      ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "USER=nomad",
        "GROUP=nomad",
        "VERSION={{user `nomad_version`}}",
        "URL={{user `nomad_ent_url`}}"
      ],
      "inline": [
        "bash /tmp/nomad/scripts/install-nomad.sh"
      ]
    },
    {
      "type": "shell",
      "only": ["amazon-ebs-rhel-7.3-systemd", "amazon-ebs-ubuntu-16.04-systemd"],
      "inline": [
        "bash /tmp/nomad/scripts/install-nomad-systemd.sh"
      ]
    },
     {
      "type": "shell",
      "only": ["amazon-ebs-rhel-7.3-systemd", "amazon-ebs-ubuntu-16.04-systemd"],
      "scripts": [
        "scripts/install-docker.sh"
      ]
    },
    {
      "type": "shell",
      "only": ["amazon-ebs-rhel-7.3-systemd", "amazon-ebs-ubuntu-16.04-systemd"],
      "inline": [
        "bash /tmp/shared/scripts/cleanup-aws.sh"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "bash /tmp/shared/scripts/cleanup.sh"
      ]
    }
  ]
}
